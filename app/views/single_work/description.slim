      .col-sm-6
        h1 = @add_description.title
        = @add_description.body
      -if can_edit?
        .col-sm-6
          = link_to 'Edit', edit_admin_blog_blog_post_path(@blog, @add_description), class: 'btn btn-primary btn-lg'
    hr
    ==render 'admin/shared/messages'

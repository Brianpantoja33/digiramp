if("<%= @remove_old_recordings %>"){
  $('.old-recordings').empty();
  endless_pages();
  history.replaceState(null, "", "?query=<%=params[:query]%>")
}

$('.add_recordings').append("<%= j render 'recordings/index', recordings: @recordings %>");

<% if (@recordings.next_page) %>
        $('.pagination').replaceWith('<%= j paginate(@recordings) %>');
<% else %>
        $('.pagination').remove();
<% end %>

initialize_digi_wahms();

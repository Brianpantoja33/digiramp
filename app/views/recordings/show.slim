/= debug @recording.audio_upload
#wrap
  .full-width-top
    == render 'admin/shared/navbar', page: 'account'
  .do           
    .container
      == render 'admin/shared/messages'
      == render 'shared/breadcrumbs', breadcrumbs: { links: { @account.title.to_sym => account_path(@account), \
                                                              assets: account_assets_path(@account), \
                                                              recordings: account_recordings_path(@account), \
                                                              }, current: @recording.title}
      
      
      /.row
      /  -body = link_to @common_work.title, account_work_path(@account, @common_work)
      /== render 'shared/page_title_text', locals: {title: @recording.title, body: body}
      -body = link_to 'COMMON WORK', account_work_path(@account, @common_work)
      == render 'shared/title', locals: {title: @recording.title, body: body} 
      .row
        .col-sm-6
           == render 'works/shared/badge_button', locals: { \
                                                      blog_post: 'INFO', \
                                                      link: account_common_work_recording_info_path(@account, @common_work, @recording), \
                                                      css_class: 'btn btn-info', \
                                                      icon: 'fa fa-info-circle' \
                                                    }
        .col-sm-6
           == render 'works/shared/badge_button', locals: { \
                                                      blog_post: 'ARTWORK', \
                                                      link: account_common_work_recording_artwork_path(@account, @common_work, @recording), \
                                                      css_class: 'btn btn-primary', \
                                                      icon: 'fa fa-picture-o' \
                                                    }                                               
      / all users can access recordings
      /.col-sm-6
      /  == render 'works/shared/badge_button', locals: { \
      /                                              blog_post: 'RECORDINGS', \
      /                                              link: account_work_work_recordings_path(@account, @common_work), \
      /                                              css_class: 'btn btn-warning', \
      /                                              icon: 'fa fa-headphones'\
      /                                            }
      /
      /-if @user_can_access_shared_with 
      /  .col-sm-6

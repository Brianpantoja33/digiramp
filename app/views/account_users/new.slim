#wrap
  .full-width-top
    == render 'admin/shared/navbar', page: 'users'

            
  .container
    ==render 'admin/shared/messages'
    == render 'shared/breadcrumbs', breadcrumbs: { links: { @account.title.to_sym => account_path(@account), \
                                                            users: account_account_users_path(@account), \
                                                            }, current: 'invite user'}
                                                            
    /== render 'shared/page_title', locals: {blog: blog, blog_post: 'Set Role'}
    == render 'shared/page_title', locals: {blog: Blog.cached_find('Account Users'), blog_post: 'Invite User'}
    .row
      .col-sm-3
      .col-sm-6
        .panel
          .panel-body
            h3 INVITE USER
            hr
            =simple_form_for [@account, @account_user] do |f|
              = f.hidden_field :account_id, value: @account.id
              = f.input :role,  collection: @roles,     as: :radio_buttons, label: false
              = f.input :email, label: 'Email for the user to invite'
              
              div id="toolbar" class="wysihtml5-toolbar"
                a data-wysihtml5-command="bold" Bold
                '&nbsp; 
                a data-wysihtml5-command="italic" Italic
          
              =f.input :invitation_message, label: false, :input_html => {  style: "height: 280px;", placeholder: "Invitation message", id: 'wysihtml5_editor'}
    
              
              .pull-right
                =f.submit 'Send', class: 'btn btn-primary btn-lg'
      /.col-sm-6
      /  h3 =@administrator.title
      /  =@administrator.body
      /  -if can_edit?
      /    .pull-right
      /      = link_to 'Edit', edit_admin_blog_blog_post_path(@blog, @administrator), class: 'btn btn-primary'
      /  br
      /  h3 = @client.title
      /  = @client.body
      /  -if can_edit?
      /    .pull-right
      /      = link_to 'Edit', edit_admin_blog_blog_post_path(@blog, @client), class: 'btn btn-primary'
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'
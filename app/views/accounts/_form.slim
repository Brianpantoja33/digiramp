
=simple_form_for @account do |f|

  .row
    .col-sm-6
      =f.input :title
      div id="toolbar" class="wysihtml5-toolbar"
        a data-wysihtml5-command="bold" Bold
        '&nbsp; 
        a data-wysihtml5-command="italic" Italic
      
      =f.input :description, label: false, :input_html => {  style: "height: 360px;", placeholder: "Description", id: 'wysihtml5_editor'}
      /=f.input :description, :input_html => {  style: "height: 360px;", placeholder: "Lyrics", id: 'wysihtml5_editor'}
      =f.input :logo, label: 'Logo 170x50 Pixels (png with transparency is best)'
      
    .col-sm-6
      =f.input :contact_first_name
      =f.input :contact_last_name
      =f.input :contact_email
      =f.input :fax
      =f.input :country, as: :text, :input_html => {  style: "height: 36px;"}
      =f.input :street_address
      =f.input :city
      =f.input :state
      =f.input :postal_code
      = f.submit 'Save', class: 'btn btn-primary btn-lg'
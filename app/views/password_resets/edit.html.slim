
#wrap
  .full-width-top
    == render 'shared/navbar', page: 'home'
  .hidden-xs
    .full-width-sign-up
      .container
        /== render 'shared/sign_up'
            
  .container
    ==render 'admin/shared/messages'
    .row
      .col-sm-4
        

      .col-sm-4
        .panel.panel-default
          .panel-heading.blue
            h3 class="panel-title"
              i class= 'fa fa-lock'
              '&nbsp;
              'Reset Password
          .panel-body

            = simple_form_for(  @user, :url => password_reset_path(params[:id]) ) do |f|
              .input-group
                span class="input-group-addon"
                  i class= 'fa fa-key'
                = f.input_field :password, placeholder: 'Password', autocomplete: :off
              br
              
              .input-group
                span class="input-group-addon"
                  i class= 'fa fa-key'
                = f.input_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: :off

              .pull-right
                br
                = f.submit 'Resend', class: 'btn btn-green btn-lg'

        

  

javascript:

  $("#digirampDialog").on('hidden.bs.modal', function (event) {
    $(".old-dialog").remove()
  });
  
  $("#digiramp_dialog_title").keyup(function() {
    if ($("#digiramp_dialog_title").val() !== '') {
      $(".digiramp_dialog_save_button").removeAttr("disabled");
    } else {
      $(".digiramp_dialog_save_button").attr('disabled', 'disabled');
    }
  });
  

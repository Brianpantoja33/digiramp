
      
div style="max-width: 840px"
  /= debug @document
  = f.hidden_field :account_id, value: @account.id
  = f.hidden_field :document_type, value: 'Template'
  = f.input :tag, collection: Document::TAGS, include_blank: true
  = f.input :body, label: 'Description', input_html: {style: "height: 80px;"}
  = f.input :title
  
  div id="toolbar" class="wysihtml5-toolbar"
    a data-wysihtml5-command="bold" Bold
    '&nbsp; 
    a data-wysihtml5-command="italic" Italic
    .pull-right
      a data-wysihtml5-action="change_view"  Html
  =f.input :text_content, label: 'Content', :input_html => {  style: "height: 800px;", placeholder: "Invitation message", id: 'wysihtml5_editor'}
  .row
    .col-sm-12
      .pull-right
        = f.submit 'Save', class: 'btn btn-primary'




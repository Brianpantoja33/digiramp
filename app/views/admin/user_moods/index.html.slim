    .row 
      .col-sm-12
        table class="table table-striped"
          tbody
            -@moods.each do |mood|
              tr
                td = mood.title
                td = mood.category
                td 
                  .pull-right
                    = link_to edit_admin_mood_path(mood) do
                      .btn.btn-primary.btn-lg

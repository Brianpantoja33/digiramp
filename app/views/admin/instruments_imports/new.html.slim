#wrap
  .admin
    .full-width-top
      == render 'admin/shared/navbar', page: 'admin'
        
  .container
    
    == render 'admin/shared/messages'
    == render 'shared/breadcrumbs', breadcrumbs: { links: { "admin".to_sym => admin_index_path, \
                                                            content: admin_content_index_path, \
                                                            tags: admin_tags_path, \
                                                            genre: admin_instruments_path, \
                                                            }, current:  'import instruments csv'}
                                                            

    == render 'shared/page_title', locals: {blog: Blog.cached_find('Tags'), blog_post: 'Import Instruments CSV'}
    .row
      .col-sm-3
      
      .col-sm-6
        .panel
          .panel-body
            h3 SELECT CSV FILE
            = simple_form_for [:admin, @instruments_import] do |f|
              - if @instruments_import.errors.any?
                #error_explanation
                  h2 = "#{pluralize(@instruments_import.errors.count, "error")} prohibited this genre_import from being saved:"
                  ul
                    - @instruments_import.errors.full_messages.each do |message|
                      li = message

              .field
                = f.input :csv_file, label: 'CVS File'
              hr
              .pull-right
                = f.submit 'Save', class: 'btn btn-primary btn-lg'
            
      .col-sm-3
    

  
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'



- session[:return_url] = request.url
#wrap
  .admin
    .full-width-top
      == render 'admin/shared/navbar', page: 'admin'

               
  .container
    ==render 'admin/shared/messages'
    -cache (['admin', Admin.cached_find(1).version]) do      

      == render 'shared/breadcrumbs', breadcrumbs: { links: { "admin".to_sym => admin_index_path, }, current: ''}

      
      == render 'shared/page_title', locals: {blog: Blog.cached_find('Admin'), blog_post: 'Admin'} 
      .row
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'ACCOUNTS', \
                                                      link: admin_accounts_path, \
                                                      css_class: 'btn btn-primary', \
                                                      icon: 'fa fa-list-alt' \
                                                    }
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'CONTENT', \
                                                      link: admin_content_index_path, \
                                                      css_class: 'btn btn-success', \
                                                      icon: 'fa fa-folder-o' \
                                                    }
      
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'USERS', \
                                                      link: admin_users_path, \
                                                      css_class: 'btn btn-info', \
                                                      icon: 'fa fa-group' \
                                                    }
                                                    
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'ACTIVITIES', \
                                                      link: admin_activities_path, \
                                                      css_class: 'btn btn-warning', \
                                                      icon: 'fa fa-clock-o' \
                                                    }
      .row  
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'ENGINE ROOM', \
                                                      link: admin_engine_room_index_path, \
                                                      css_class: 'btn btn-danger', \
                                                      icon: 'fa fa-cogs' \
                                                    }
                                                    
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'DEVELOPMENT LOG', \
                                                      link: admin_development_log_index_path, \
                                                      css_class: 'btn btn-default', \
                                                      icon: 'fa fa-bullhorn' \
                                                    }
                                                    
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'ISSUES', \
                                                      link: admin_issues_path, \
                                                      css_class: 'btn btn-warning', \
                                                      icon: 'fa fa-bug' \
                                                    }
                                                    
        .col-sm-6
          == render 'shared/badge_button', locals: { \
                                                      blog_post: 'STATISTICS', \
                                                      link: admin_statistics_path, \
                                                      css_class: 'btn btn-info', \
                                                      icon: 'fa fa-bar-chart-o' \
                                                    }
                                                    
                                                    
                                                    
      /.row
      /  
      /  .col-sm-6
      /    == render 'admin/shared/badge_buttons/genre'
      /
  
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'
  

#wrap
  .admin
    .full-width-top
      == render 'admin/shared/navbar', page: 'admin'

               
  .container
    /==render 'admin/shared/messages'
    / fix cache expiration here
    -cache (['system_emails', Admin.cached_find(1).version ]) do
      /.do
      == render 'shared/breadcrumbs', breadcrumbs: { links: {   "admin".to_sym => admin_index_path,\
                                                                "content".to_sym => admin_content_index_path },\
                                                                 current: 'emails'}

      
      == render 'shared/page_title', locals: {blog: Blog.cached_find('Admin'), blog_post: 'System Emails'} 
      
      - blog = Blog.cached_find('Support')

      .row
        .col-sm-6
          - blog_post = BlogPost.cached_find( "TICKET RECEIVED" , blog )
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: blog_post, \
                                              link: edit_admin_blog_blog_post_path(blog, blog_post), \
                                              css_class: 'btn btn-primary', \
                                              icon: 'fa fa-bug', \
                                              id: 'common-works' \
                                            }
                                            
        .col-sm-6
          - blog_post = BlogPost.cached_find( "ISSUE RESOLVED" , blog )
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: blog_post, \
                                              link: edit_admin_blog_blog_post_path(blog, blog_post), \
                                              css_class: 'btn btn-primary', \
                                              icon: 'fa fa-bug', \
                                              id: 'issue-resolved' \
                                            }
        
        .col-sm-6
          - blog_post = BlogPost.cached_find( "INVITE TO CATALOG" , blog )
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: blog_post, \
                                              link: edit_admin_blog_blog_post_path(blog, blog_post), \
                                              css_class: 'btn btn-warning', \
                                              icon: 'fa fa-archive', \
                                              id: 'catalog' \
                                            }
        .col-sm-6
          - blog_post = BlogPost.cached_find( "INVITE TO OPPORTUNITY" , blog )
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: blog_post, \
                                              link: edit_admin_blog_blog_post_path(blog, blog_post), \
                                              css_class: 'btn btn-danger', \
                                              icon: 'fa fa-plane', \

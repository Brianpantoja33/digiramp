#wrap
  == render 'admin/shared/navbar', page: 'manage'

            
  .container
    .row
      .col-sm-12
        h3 =@video_blog.title
        = @video_blog.body
    .row
      .col-sm-12
        ==render 'admin/shared/messages'
        .table-responsive
          table class="table table-hover"
            thead
              tr
                /th User
                th Title
                th Body
                th Manage
            tbody
              -@video_blog.videos.each do |video|
                tr
                  td =link_to video.title, admin_video_blog_video_path(@video_blog, video)
                  td =debug video
                  td
                    .pull-right
                      /=render 'admin/shared/button_link', locals: {path: admin_video_blog_video_path(@video_blog, video), icon: 'icon-user',  label: 'Show'}

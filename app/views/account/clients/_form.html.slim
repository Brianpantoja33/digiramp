= simple_form_for [:account, @account, @client] do |f|
  .row
    .col-sm-4
      = f.hidden_field :user_uuid, value: current_user.uuid
      = f.hidden_field :account_id, value: @account.id
      /= f.input :title
      = f.input :email, autofocus: true
      = f.input :name, label: 'First Name'
      = f.input :last_name
      = f.input :company
      = f.input :department
      = f.input :capacity
      = f.input :business_email
    .col-sm-4
      = f.input :telephone_home
      = f.input :business_phone
      = f.input :direct_phone
      = f.input :fax_home
      = f.input :business_fax
      = f.input :direct_fax
      = f.input :cell_phone
      
    
    .col-sm-4
      /= f.input :photo
      
      = f.input :address_work, :input_html => {  style: "height: 120px;"}, label: 'Address'
      = f.input :city_work,     label: 'City'
      .row
        .col-sm-6
          = f.input :state_work,    label: 'State'
        .col-sm-6
          = f.input :zip_work,      label: 'Zip Code'
      br
      b Country
      br
      = f.input :country_work   , label: false, as: :country, priority: ['US'] 
      = f.input :home_page      , label: 'Home Page', placeholder: 'i.e. http://xxx.com'

  .row
    .col-sm-12
      .pull-right
        = f.submit 'Save', class: 'btn btn-info'

#wrapper
  .full-width-top
    == render 'shared/navigationbar', page: 'user' 
  

  .pro-account
    #sidebar-wrapper
      ul class="sidebar-nav"
        == render 'account/shared/sidebar', selected: 'user'
  
  #page-content-wrapper
    .container-fluid
      ==render 'admin/shared/messages'
      == render 'shared/breadcrumbs', breadcrumbs: { links: { account: account_account_path(@account),\
                                                              users: account_account_account_users_path(@account)}, current:  ''}
      .row
        .col-sm-6
          .help
            .help-text
              h2 Account users permissions
            .help-button
              == render 'admin/helps/help', identifier: 'edit account user permissions'
          
        .col-sm-6
          .pull-right.pull-down-10
            = link_to  account_account_account_users_path(@account) do
                .btn.btn-default
                  i.fa.fa-chevron-left
                  '&nbsp;Back

      .sexy_line
      h4 = @account_user.email
      .account_users.digi-box
        .row
          .col-sm-12
            =simple_form_for [:account, @account, @account_user], turboboost: true do |f|
              /= f.hidden_field :account_id, value: @account.id
              /= f.hidden_field :user_id, value: @account_user.user_id
              == render 'form', f: f
              .sexy_line
              .pull-right
                = link_to 'Cancel', account_account_account_users_path(@account), class: 'btn btn-default'
                '&nbsp;
                = f.submit 'Update', class: 'btn btn-primary'
                   
              
  == render 'shared/site_footer'    
 











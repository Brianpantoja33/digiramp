 
  
  
/= debug current_account_user
- session[:return_url]         = request.url
- session[:go_to_after_update] = request.url
- blog      = Blog.cached_find('Account Documents')
#wrap
  div class="#{'profile' if account_owner?}"
    .full-width-top
      == render 'admin/shared/navbar', page: 'account' 
  
  .container
    == render 'shared/breadcrumbs', breadcrumbs: { links: { @account.title.to_sym => account_path(@account), \
                                                            manage: account_account_path(@account), \
                                                            documents: account_account_documents_path(@account), \
                                                            'recordings bucket'.to_sym => account_account_recordings_bucket_index_path(@account) \
                                                           }, \
                                                    current:  'eidt shared'}
    
    == render 'shared/page_title', locals: {blog: blog, blog_post: 'EDIT SHARED'}
    == render 'admin/shared/messages'
   

  
        
  
    = form_tag update_shared_account_account_recordings_bucket_index_path [ @account] do
      b Recordings:
      '&nbsp;&nbsp;
      -@recordings.each do |recording| 
        b = recording.title 
        = hidden_field_tag "recording_ids[]", recording.id
        '&nbsp;&nbsp;/&nbsp;&nbsp;
      br
      br
      .panel.panel-primary
        .panel-heading
          'Shared fields
        .panel-body
          = simple_fields_for :recording do |f|
            .row
              .col-sm-3
                = f.input :artist, required: false, :input_html => {  style: "height: 80px;", placeholder: "Artist"}, as: 'text'
              .col-sm-3
                = f.input :composer, required: false, :input_html => {  style: "height: 80px;", placeholder: "Composer"}, as: 'text'
              .col-sm-3
                = f.input :Performer, required: false, :input_html => {  style: "height: 80px;", placeholder: "Performer"}, as: 'text'
              .col-sm-3
                = f.input :Band, required: false, :input_html => {  style: "height: 80px;", placeholder: "Band"}, as: 'text'
            .row
              .col-sm-3
                = f.input :genre, required: false, :input_html => {  style: "height: 80px;", placeholder: "i.e. Pop, Cinimatic, Hip-Hop, Christmas"}, as: 'text'
              .col-sm-3
                = f.input :mood, required: false, :input_html => {  style: "height: 80px;", placeholder: "i.e. Happy, Uplifting, Scary, Action"}, as: 'text'
              .col-sm-3
                = f.input :instruments, required: false, :input_html => {  style: "height: 80px;", placeholder: "i.e. Drums, Banjo, Choir, Electric Guitar"}, as: 'text'
              .col-sm-3
                = f.input :copyright, required: false, :input_html => {  style: "height: 80px;", placeholder: "i.e. Â© 2014 Entertainment Company, Inc"}, as: 'text'
           
      .pull-right  
        = submit_tag "Update", class: 'btn btn-primary btn-lg'
    
    
   

 
  == render 'shared/back', locals: {link: account_account_recordings_bucket_index_path(@account)}
    
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'







    

/= debug current_account_user
- session[:return_url]         = request.url
- session[:go_to_after_update] = request.url
- blog      = Blog.cached_find('Account')
#wrap
  div class="#{'profile' if account_owner?}"
    .full-width-top
      == render 'admin/shared/navbar', page: 'account' 
  
  .container
    == render 'shared/breadcrumbs', breadcrumbs: { links: {@account.title.to_sym => account_path(@account),
                                                           manage: account_account_path(@account)}, \
                                                           current:  'crm'}
    ==render 'admin/shared/messages'

    /- insert = 'accounts/shared/leave_account'
    
    == render 'shared/page_title_text', locals: {title: @account.title, body: ''}


                                          
    .row

        .col-sm-6
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: BlogPost.cached_find( "PROJECTS" , blog ), \
                                              link: account_account_projects_path(@account), \
                                              css_class: 'btn btn-primary', \
                                              icon: 'fa fa-road' \
                                            }
        
        -if current_account_user.read_opportunity
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "OPPORTUNITIES" , blog ), \
                                                link: account_account_opportunities_path(@account), \
                                                css_class: 'btn btn-danger', \
                                                icon: 'fa fa-plane' \
                                              }
                        

        .col-sm-6
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: BlogPost.cached_find( "CLIENTS" , blog ), \
                                              link: account_account_clients_path(@account), \
                                              css_class: 'btn btn-default', \
                                              icon: 'fa fa-user' \
                                            }
                        

        .col-sm-6
          == render 'shared/badge', locals: {  \
                                              blog: blog, \
                                              post: BlogPost.cached_find( "CLIENT GROUPS" , blog ), \
                                              link: account_account_client_groups_path(@account), \
                                              css_class: 'btn btn-warning', \
                                              icon: 'fa fa-group' \
                                            }
                        

        
          
          
          
      
    
   

        
  
    
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'





#wrapper
  .full-width-top
    == render 'shared/navigationbar', page: 'home' 
  
  
  #sidebar-wrapper
    ul class="sidebar-nav"
      == render 'users/shared/sidebar', selected: 'account'
  
  #page-content-wrapper
    .container-fluid
      .row
        .col-sm-4
          = link_to "PROJECTS", account_account_projects_path(@account)
        .col-sm-4
          = link_to "CLIENTS", account_account_clients_path(@account)
        .col-sm-4
          = link_to "CLIENT GROUPS", account_account_client_groups_path(@account)

                
            
                 
              
  == render 'shared/site_footer'    
== render 'users/shared/mobile_links'

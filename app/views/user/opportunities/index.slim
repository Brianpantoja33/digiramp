
#wrapper
  .full-width-top
    == render 'shared/navigationbar', page: 'home' 
  
  
  #sidebar-wrapper
    ul class="sidebar-nav"
      == render 'users/shared/sidebar', selected: 'opportunities'
  
  #page-content-wrapper
    .container-fluid
      .row
        .col-sm-7
          h3 Opportunities for submissions
          'You are permitted to submit to the following opportunities 
        /.col-sm-5
        /  .pull-right
        /    /== debug current_account_user
        /    == render 'opportunity/shared/opportunity_navigation'
        .col-sm-5
          .pull-right
            = link_to 'Create opportunity', new_account_account_opportunity_path(@user.account), class: 'btn btn-primary'
      .sexy_line
      .opportunity
        .opportunity-badges
          - @user.opportunities.order('deadline desc').each do |opportunity|
            - opportunity_link = @user.account_id == opportunity.account_id ? account_account_opportunity_path(@user.account, opportunity)  : opportunity_opportunity_path(opportunity)
            == render 'opportunity/opportunity', opportunity: opportunity, opportunity_link: opportunity_link
                 
              
  == render 'shared/site_footer'    
== render 'users/shared/mobile_links'

































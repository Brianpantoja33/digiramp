#wrapper
  .full-width-top
    == render 'shared/navigationbar', page: 'settings' 
  
  
  #sidebar-wrapper
    ul class="sidebar-nav"
      == render 'users/shared/sidebar', selected: 'control panel'
  
  #page-content-wrapper
    .container-fluid
      == render 'shared/breadcrumbs', breadcrumbs: { links: { 'Dashboard'.to_sym => user_user_control_panel_index_path(@user) } }
      == render 'shared/flash_message'
      .row
        .col-sm-6
          .help
            .help-text
              h2 Publishers
              
            .help-button
              == render 'admin/helps/help', identifier: 'user publishers'
        .col-sm-6
          .pull-right.pull-down-10
            = link_to 'Add Publisher', new_user_user_publisher_path(@user), class: 'btn btn-default'

      .pull-down-10
      .digi-box 

        .table-responsive
          table class="table table-hover"
        
            thead
              tr
                th
                th Legal name
                th Public
                /th Email,
                /th Phone number
                /th Ipi code
                /th Pro affiliation
                /th Status
                th IPI CODE
                th PRO
            
            
            tbody
              - @publishers.each do |publisher|
                tr
                  td
                    
                    -if (publisher.account_id == @user.account.id) || publisher.pending?
                      - if publisher.personal_publisher
                        = link_to 'Edit', edit_user_user_publisher_legal_info_path(publisher.user, publisher), class: 'btn btn-default btn-xs'
                      - else
                        = link_to 'Edit', edit_user_user_publisher_path(publisher.user, publisher), class: 'btn btn-default btn-xs'
                        
                      /=> link_to edit_user_user_publisher_path(@user, publisher) do
                      /  .btn.btn-default.btn-xs
                      /    i.fa.fa-pencil&nbsp;Edit
                      / 
                      - if publisher.personal_publisher  
                        .btn.btn-danger.btn-xs disabled="disabled"
                          i.fa.fa-times
                      - else 
                        = link_to  user_user_publisher_path(@user, publisher), 
                                              data: {:confirm => 'Are you sure?'}, 
                                              :method => :delete,
                                              turboboost: true do
                              .btn.btn-danger.btn-xs
                                i.fa.fa-times
                                
                  th 
                    -if publisher.user_id == @user.id
                      = link_to publisher.legal_name, user_user_publisher_path(publisher.user, publisher), class: 'btn btn-default btn-xs'
                    - else
                      = publisher.legal_name
                  /td = publisher.email
                  /td = publisher.phone_number
                  td
                    - if publisher.show_on_public_page
                      'âˆš Yes
                    - else
                      ' - No
                  td = publisher.ipi_code
                  td 
                    - if pro_affiliation = publisher.pro_affiliation
                      = pro_affiliation.title
                  /td 
                  /  - if publisher.pending?
                  /    .label.label-info
                  /      'Pending
                  /  - elsif publisher.confirmed?
                  /    .label.label-success
                  /      'Confirmed
                  /  - elsif publisher.declined?
                  /    .label.label-warning
                  /      'Declined
                  /
                  /td = link_to 'Show', publisher
                  /td = link_to 'Edit', edit_publisher_path(publisher)
                  /td = link_to 'Destroy', publisher, data: {:confirm => 'Are you sure?'}, :method => :delete
            
                  

         
              
  == render 'shared/site_footer'    
 







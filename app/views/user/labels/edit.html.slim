      .container-fluid
        .row
          .col-sm-8
            .help
              .help-text
                h2  Edit label
               
              .help-button
                == render 'admin/helps/help', identifier: 'edit user labels'
      
          .col-sm-4
            .pull-right.pull-down-10
              => link_to  user_user_label_path(@user, @label) do
                  .btn.btn-default
                    i.fa.fa-chevron-left
                    '&nbsp;Back

      
      .pull-down-10
      .digi-box 
        == render 'form'

        
      
      
                  

         
              

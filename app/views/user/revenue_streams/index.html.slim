#wrapper
  .full-width-top
    == render 'shared/navigationbar', page: 'dashboard' 
  
  
  #sidebar-wrapper
    ul class="sidebar-nav"
      == render 'users/shared/sidebar', selected: 'dashboard'
  
  #page-content-wrapper
    .container-fluid
      == render 'shared/flash_message'
      h2 Revenue streams
      .sexy_line
      .digi-box
        .table-responsive
          table class="table table-hover"
            thead
              tr
                /th
                /th Type
                th Source
                th Units sold
                th Split
                th Amount
                th Income
                th
            tbody
              - @stakes.each do |stake|
                
                tr
                  /td = link_to user_user_product_stake_path(@user, @shop_product, stakeholder), 
                  /                              data: { confirm: 'Are you sure?' } , 
                  /                              turboboost: true, 
                  /                              :method => :delete do
                  /        .btn.btn-danger.btn-xs
                  /          i.fa.fa-times
                  /td = stake.asset_type
                  td = stake.original_source
                  td = stake.units_sold
                  td = number_to_percentage(stake.split, precision: 0) 
                  td = number_to_currency( stake.unit_price, precision: 4, locale: 'en')
                  th = number_to_currency( stake.generated_income, precision: 4, locale: 'en')
                  td
                    .pull-right
                      = link_to user_user_revenue_stream_path(@user, stake) do
                        .btn.btn-default.btn-xs
                          i.fa.fa-share&nbsp;Share
        
      

         
              
  == render 'shared/site_footer'    
 




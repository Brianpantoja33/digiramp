  .pull-down-10
    .row
      .col-sm-12
        .connection-avatar
          = link_to user_path( @user) do
            = image_tag @user.image_url(:avatar_48x48)
            '&nbsp;
        .connection-link
          = link_to @user.user_name, user_path( @user)

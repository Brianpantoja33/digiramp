                .btn.btn-primary.btn-xs
                  i.fa.fa-refresh
                  '&nbsp;Connect  
          - else
            button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target=".become-member"
              i.fa.fa-refresh
              '&nbsp;Connect
          
        
        
        
  
          
        

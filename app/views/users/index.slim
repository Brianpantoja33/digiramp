#wrap
  .full-width-top
    == render 'shared/navigationbar', page: 'account' 
  .container
    br
    = form_tag users_path, :method => 'get' do
      .col-sm-6
        = text_field_tag "query", "", :class => 'search-query form-control', \
                                      :placeholder => 'Search string', \
                                      value: params[:query]
        br
      .col-sm-6
        = submit_tag 'Search', class: 'btn btn-primary please_wait'
        '&nbsp;
        = link_to 'Show All',users_path, class: 'btn btn-default please_wait'
        br

    .row
      .col-sm-12
        .pull-right
          .hidden-xs
            == paginate(@users)
          .visible-xs
            .btn-group
              = link_to_previous_page @users, '« Prev', class: 'btn btn-default mobile_pagination'
              = link_to_next_page @users, 'Next »', class: 'btn btn-default mobile_pagination'
              
  
  .users-container
    .container
      .person-badges
        - @users.each do |user|
          == render 'users/person', user: user

  == render 'shared/site_footer'    
            .col-sm-6
              == render 'shared/badge', locals: {  \
                                                  blog: blog, \
                                                  post: BlogPost.cached_find( "FIND IN COLLECTION" , blog ), \
                                                  link: catalog_account_catalog_find_in_collections_path(@account, @catalog), \
                                                  css_class: 'btn btn-warning', \
                                                  icon: 'fa fa-archive', \
                                                  id: 'add-find-recordings' \
                                                }
          - if current_catalog_user.update_common_work

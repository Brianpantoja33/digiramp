              == render 'shared/badge', locals: {  \
                                                  blog: blog, \
                                                  post: BlogPost.cached_find( "ADD TO COMMON WORK" , blog ), \
                                                  link: catalog_account_catalog_common_works_path(@account, @catalog), \
                                                  css_class: 'btn btn-primary', \
                                                  icon: 'fa fa-music', \
                                                  id: 'add-common-work' \
                                                }
                                                
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "UPLOAD RECORDINGS" , blog ), \
                                                link: catalog_account_catalog_upload_recordings_path(@account, @catalog), \
                                                css_class: 'btn btn-info', \

#wrap
  div class="#{'profile' if account_owner?}"
    .full-width-top
      == render 'admin/shared/navbar', page: 'account'         
  .container
    ==render 'admin/shared/messages'
    /-cache ([Admin.cached_find(1).version, request.url,@account.recordings_uuid, current_user.uuid  ]) do
    .do
      == render 'shared/breadcrumbs', breadcrumbs: { links: { @account.title.to_sym => account_path(@account), \
                                                              catalogs: catalog_account_catalogs_path(@account), \
                                                              @catalog.title.to_sym => catalog_account_catalog_path(@account, @catalog), \
                                                              }, current: 'add common work'}
      
      - blog = Blog.cached_find('Add Catalog Common Works')
      == render 'shared/page_title', locals: {blog: blog, blog_post: 'Add Common Works'}

      .row
        /-if current_user.can_manage 'access recordings', @account
        - if current_account_user.update_catalog
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "WIZARD" , blog ), \
                                                link: catalog_account_catalog_add_recordings_path(@account, @catalog), \
                                                css_class: 'btn btn-primary', \
                                                icon: 'fa fa-magic', \
                                                id: 'add-recordings' \
                                              }
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "SELECT FROM COLLECTION" , blog ), \
                                                link: catalog_account_catalog_find_common_work_in_collection_path(@account, @catalog), \
                                                css_class: 'btn btn-warning', \
                                                icon: 'fa fa-archive', \
                                                id: 'add-common-work' \
                                              }
                                              
  
            
    
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'
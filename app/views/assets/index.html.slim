#wrap
  .full-width-top
    == render 'admin/shared/navbar', page: 'account'

            
  .container
    ==render 'admin/shared/messages'
    /-cache ([request.url, current_user.permission_cache_for( @account), Admin.cached_find(1).version ]) do
    .do
      - blog = Blog.cached_find('Assets')
      == render 'shared/breadcrumbs', breadcrumbs: { links: { @account.title.to_sym => account_path(@account), \
                                                              }, current: 'assets'}
      
      
      == render 'shared/page_title', locals: {blog: Blog.cached_find('Assets'), blog_post: 'Assets'}
      
      
      
      
      .row

            
        -if current_user.can_manage 'access recordings', @account  
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "RECORDINGS" , blog ), \
                                                link: account_recordings_path(@account), \
                                                css_class: 'btn btn-warning', \
                                                icon: 'fa fa-headphones', \
                                                id: 'recordings' \
                                              }
            
            
            
        -if current_user.can_manage 'access works', @account
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "WORKS" , blog ), \
                                                link: account_account_works_path(@account), \
                                                css_class: 'btn btn-primary', \
                                                icon: 'fa fa-music', \
                                                id: 'common-works' \
                                              }
            
        -if true
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "CATALOGS" , blog ), \
                                                link: account_catalogs_path(@account), \
                                                css_class: 'btn btn-primary', \
                                                icon: 'fa fa-list-ul', \
                                                id: 'catalogs' \
                                              }
                                        
        -if current_user.can_manage 'add_music', @account
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "ADD MUSIC" , blog ), \
                                                link: account_add_content_index_path(@account), \
                                                css_class: 'btn btn-success', \
                                                icon: 'fa fa-plus-circle', \
                                                id: 'add-music' \
                                              }

        -if current_user.can_manage 'documents', @account
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "DOCUMENTS" , blog ), \
                                                link: account_documents_path(@account), \
                                                css_class: 'btn btn-danger', \
                                                icon: 'fa fa-folder-o', \
                                                id: 'documents' \
                                              }
                                      
        -if current_user.can_manage 'addministrate playlists', @account  
          .col-sm-6
            == render 'shared/badge', locals: {  \
                                                blog: blog, \
                                                post: BlogPost.cached_find( "PLAYLISTS" , blog ), \
                                                link: account_playlists_path(@account), \
                                                css_class: 'btn btn-default', \
                                                icon: 'fa fa-headphones', \
                                                id: 'playlists' \
                                              }


      
-cache (['footer', Admin.cached_find(1).version]) do      
  =render 'shared/footer'
  